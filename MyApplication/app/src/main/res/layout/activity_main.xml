<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello There Gatar and Matar!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/start_data"
        android:onClick="startCapturingData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START CAPTURING DATA"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/stop_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="stopCapturingData"
        android:text="STOP CAPTURING DATA"
        app:layout_constraintBottom_toBottomOf="@+id/start_data"
        tools:layout_editor_absoluteX="197dp"
        tools:layout_editor_absoluteY="1dp" />



    <Button
        android:id="@+id/capture_pothole"
        android:onClick="capturePothole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPTURE POTHOLE NOW"
        tools:layout_editor_absoluteX="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/capture_pothole"
        tools:layout_editor_absoluteY="80dp" />

</android.support.constraint.ConstraintLayout>